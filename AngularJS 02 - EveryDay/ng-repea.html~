<!doctype html>
<html ng-app>
<head>
<title>Angular.js - ng-repeat</title>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.15/angular.min.js"></script>
</head>

<body>
<input type="search" ng-model="search" />
<div ng-controller="NameList">
  <ul>
    <li ng-repeat="name in names | filter:search">{{ name }}</li>
  </ul>
</div>

<input type="search" ng-model="personfilter" />
<div ng-controller="PeopleList">
  <ul>
    <li ng-repeat="person in people | filter:personfilter">
      {{ person.name}} - {{ person.age }}
    </li>
  </ul>
</div>
<script>
  var NameList = function($scope) {
   $scope.names = ["Dimitar", "Alexander", "Maria", "Hristo" ];
  }

  var PeopleList = function($scope) {
    $scope.people = [
      { name: "Dimitar", age: 12 },
      { name: "Alexander", age: 24 },
      { name: "Maria", age: 26 },
      { name: "Hristo", age: 28 },
    ];
  }
</script>
</body>
</html>
